<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/geo_header">

        <SwitchPreferenceCompat
            app:key="geo"
            app:title="@string/use_location" />

        <SwitchPreferenceCompat
            app:dependency="geo"
            app:key="attachment"
            app:summaryOff="@string/location_auto_off"
            app:summaryOn="@string/location_auto_on"
            app:title="@string/location_auto" />

        <CheckBoxPreference
            app:title="@string/clear_locations" />

    </PreferenceCategory>

</PreferenceScreen>